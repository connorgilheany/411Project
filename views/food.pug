extends layout

block content
  #main-box
    h1= title
    p Search for food!

    #form
      form(action = "/food", method="POST")
        div.input
          span.label Food Taste
          input(type="text", name="query")
        div.actions
          input(type="submit", value="Search")

  body
    nav.navbar.fixed-top.navbar-expand-lg.navbar-light(style="background-color: #57a5c1;")
      a.navbar-brand(href='/') Anti Outside Inside App
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarNavAltMarkup', aria-controls='navbarNavAltMarkup', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarNavAltMarkup.collapse.navbar-collapse
        .navbar-nav
          a.nav-item.nav-link.active(href='/')
          a.nav-item.nav-link.active(href='/books') Search Books
          a.nav-item.nav-link(href='/watch') Watch Something
          a.nav-item.nav-link(href='/food') Cook Something

    div.container(style='margin-top:70px')
      div.row
        div.col-lg-12
          p TEST
          p #{resultsLength}

    div.container
        ul.list-group
        for item in results
          li.list-group-item: #{item}
          // a(href=item.previewLink, target="_blank")
