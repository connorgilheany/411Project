<div class="jumbotron">
    <div class="container">
        <h1>Search with Spotify!</h>
    </div>
</div>
<form action="/listen" method="post" role="form" enctype="application/x-www-form-urlencoded">

    <div class="form-group">
        <label for="param_query">
        <input type="text" class="form-control" name="param_query" id="param_query" placeholder="Search">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
{{#if results}}
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Artist</th>
            <th>Song</th>
            <th>Preview Link</th>
            <th>Album</th>
        </tr>
        </thead>
        <tbody>
        {{#each results}}
            <tr>
                <td>{{artist}}</td>
                <td>{{song}}</td>
                <td><iframe src={{preview}} width="300" height="80" frameborder="0" allowtransparency="true" allow="encrypted-media"></iframe></td>
                <td>{{album}}</td>
            </tr>
        {{/each}}
        </tbody>
    </table>
{{/if}}
