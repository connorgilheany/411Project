extends layout 

block content
    body
        div.container(style='margin-top:70px')
            h1 Search with Spotify!
            #form
                form(action = "/listen", method="POST")
                    div.input
                        input(type="text", name = "param_query", placeholder="Search")
                    div.actions
                        input.btn.btn-info(type='submit', value='Search')
                    if results
                        div.container
                            for each in results
                                p= each.artist
                                p= each.song
                                iframe(src=each.preview, width='300', height='80', frameborder='0', allowtransparency='true', allow='encrypted-media')
                                p= each.album
                                p ____________________________


